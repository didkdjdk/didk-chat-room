<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.didk.dao.ChatRoomDao">

    <resultMap type="com.didk.entity.ChatRoomEntity" id="roomMap">
        <result property="id" column="id"/>
        <result property="roomName" column="room_name"/>
        <result property="headUrl" column="head_url"/>
        <result property="currentMembers" column="current_members"/>
        <result property="totalSeq" column="total_seq"/>
        <result property="createDate" column="create_date"/>
        <result property="description" column="description"/>
        <result property="ownerId" column="owner_id"/>
    </resultMap>

    <select id="selectByName" resultType="com.didk.entity.ChatRoomEntity" parameterType="string">
        select * from chat_room where room_name = #{roomName}
    </select>

    <select id="selectByOwnerId" resultType="com.didk.entity.ChatRoomEntity" parameterType="long">
        select * from chat_room where owner_id = #{ownerId}
    </select>

    <update id="incrementMember" parameterType="java.lang.Long">
        UPDATE chat_room
        SET current_members = current_members + 1
        WHERE id = #{roomId};
    </update>

    <update id="reduceMember" parameterType="java.lang.Long">
        UPDATE chat_room
        SET current_members = current_members - 1
        WHERE id = #{roomId};
    </update>

    <update id="incrementSeq" parameterType="java.lang.Long">
        UPDATE chat_room
        SET total_seq = total_seq + 1
        WHERE id = #{roomId};
    </update>

</mapper>