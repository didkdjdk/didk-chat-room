<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.didk.dao.ChatRoomRequestDao">

    <resultMap type="com.didk.entity.ChatRoomRequestEntity" id="roomRequestMap">
        <result property="id" column="id"/>
        <result property="roomId" column="room_id"/>
        <result property="userId" column="user_id"/>
        <result property="status" column="status"/>
        <result property="applyReason" column="apply_reason"/>
        <result property="answerContent" column="answer_content"/>
        <result property="rejectReason" column="reject_reason"/>
        <result property="handlerId" column="handler_id"/>
        <result property="createDate" column="create_date"/>
        <result property="processDate" column="process_date"/>
    </resultMap>

    <select id="selectByRoomId" resultType="com.didk.entity.ChatRoomRequestEntity" parameterType="long">
        SELECT * FROM chat_room_request
        WHERE
        room_id = #{roomId}

        <if test="lastCreateDate != null">
            AND create_date &lt; #{lastCreateDate}
        </if>

        ORDER BY create_date DESC
        LIMIT #{limit}
    </select>

    <select id="selectByUserId" resultType="com.didk.entity.ChatRoomRequestEntity" parameterType="long">
        select * from chat_room_request where user_id = #{userId} order by create_date desc
    </select>

    <select id="selectByRoomAndUser" resultType="com.didk.entity.ChatRoomRequestEntity">
        select * from chat_room_request where room_id = #{roomId} and user_id = #{userId}
    </select>

</mapper>