<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.didk.dao.ChatAnnounceDao">

    <resultMap type="com.didk.entity.ChatAnnounceEntity" id="announceMap">
        <result property="id" column="id"/>
        <result property="roomId" column="room_id"/>
        <result property="userId" column="user_id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="imageUrl" column="image_url"/>
        <result property="isPinned" column="is_pinned"/>
        <result property="createDate" column="create_date"/>
        <result property="updateDate" column="update_date"/>
    </resultMap>

    <select id="selectAll" resultType="com.didk.entity.ChatAnnounceEntity">
        select * from chat_announce
        <where>
            <if test="roomId != null">
                and room_id = #{roomId}
            </if>
        </where>
    </select>

    <select id="selectByRoomId" resultType="com.didk.entity.ChatAnnounceEntity" parameterType="long">
        select * from chat_announce where room_id = #{roomId}
    </select>

    <select id="selectByUserId" resultType="com.didk.entity.ChatAnnounceEntity" parameterType="long">
        select * from chat_announce where user_id = #{userId}
    </select>

    <select id="selectPinnedByRoomId" resultType="com.didk.entity.ChatAnnounceEntity" parameterType="long">
        select * from chat_announce where room_id = #{roomId} and is_pinned = 1
    </select>

</mapper>